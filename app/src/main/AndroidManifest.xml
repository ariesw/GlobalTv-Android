<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atua.anddev.globaltv">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CatlistActivity"
            android:label="@string/category_list"
            android:theme="@style/ChannelListTheme" />

        <activity
            android:name=".ChannellistActivity"
            android:label="@string/channel_list"
            android:theme="@style/ChannelListTheme" />

        <activity
            android:name=".GlobalSearchActivity"
            android:label="@string/search"
            android:theme="@style/ChannelListTheme" />

        <activity
            android:name=".PlaylistManagerActivity"
            android:label="@string/playlistsManager"
            android:theme="@android:style/Theme.Holo" />

        <activity
            android:name=".PlaylistEditActivity"
            android:label="Playlist add/edit"
            android:theme="@android:style/Theme.Holo" />

        <activity
            android:name=".GlobalFavoriteActivity"
            android:label="@string/favorites"
            android:theme="@style/ChannelListTheme" />

        <activity
            android:name=".UpdateInfoListActivity"
            android:label="Sorted by update date playlists"
            android:theme="@android:style/Theme.Holo" />

        <activity
            android:name=".GuideActivity"
            android:label="@string/program_guide"
            android:theme="@android:style/Theme.Holo" />

        <activity
            android:name=".PlayerActivity"
            android:label="Player"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />

        <activity
            android:name=".SearchProgramActivity"
            android:label="@string/search_program"
            android:theme="@style/ChannelListTheme" />

    </application>

</manifest>
